<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/background"
        android:scaleType="centerCrop"/>

    <ImageView
        android:id="@+id/sashimi"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/sashimi"
        android:layout_below="@+id/Sushi"
        android:layout_margin="10dp"
        />
    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/rolls"
        android:layout_toRightOf="@id/sashimi"
        android:layout_below="@id/Sushi"
        android:layout_margin="10dp"/>
    <TextView
        android:id="@+id/Sushi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sushi TT"
        android:textSize="36sp"
        android:paddingTop="40dp"
        android:layout_centerHorizontal="true"
         />
    <TextView
        android:id="@+id/Location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Location: 25 Harwood Ave. South AJAX, ON, L1S 2B8"
        android:layout_alignParentBottom="true"
        android:textSize="20sp"
        android:padding="20dp"
        />
    <TextView
        android:id="@+id/store"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Store hours: Mon: 11:30am-10:00pm Tue: Closed Wed, Thu: 11:30am-10:00pm Fri-Sat: 11:30am-10:30pm Sun, Holidays: 11:300am-9:00pm"
        android:textSize="20sp"
        android:padding="20dp"
        android:layout_above="@id/Location"/>
</RelativeLayout>